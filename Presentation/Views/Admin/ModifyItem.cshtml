<script type="text/javascript">
    function changeProperty() {
		var url = '@Url.Action("ItemProperties", "Admin")';
        $.ajax({
            type: "POST",
            url: url,
            data: $('#CategoryId').serialize(),
            cache: false,
            dataType: 'html',
            success: function (response) {
                $("#ItemProperties").html(response);
            }
        });
    }
</script>

