@model BusinessObjects.Orders.ClientOrders

@{
	ViewBag.Title = "ModifyOrderStatus";
}

@using (Html.BeginForm())
{
	<br />
	@Html.AntiForgeryToken()
	<h1>Pasirinkite užsakymo būseną iš esamų:</h1>
	<br /><br />
	<div class="form-horizontal">
		@Html.HiddenFor(model => model.Id)
		<div class="form-group">
			<div class="col-md-3">
				@Html.EnumDropDownListFor(model => model.OrderStatus, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.OrderStatus, "", new { @class = "text-danger" })
			</div>
		</div>
		<br />
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Pakeisti užsakymo būseną" class="btn btn-warning" />
			</div>
		</div>
	</div>
}